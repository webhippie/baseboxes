{
  "builders": [
    {
      "type": "virtualbox-iso",
      "iso_url": "http://download.opensuse.org/distribution/13.1/iso/openSUSE-13.1-DVD-x86_64.iso",
      "iso_checksum": "1096c9c67fc8a67a94a32d04a15e909d",
      "iso_checksum_type": "md5",
      "output_directory": "images/opensuse-13.1",
      "boot_wait": "10s",
      "disk_size": 20480,
      "headless": false,
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "30m",
      "vm_name": "opensuse-13.1",
      "guest_os_type": "OpenSUSE_64",
      "http_directory": "http",
      "hard_drive_interface": "sata",
      "guest_additions_mode": "upload",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -P now",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--vrde", "on"],
        ["modifyvm", "{{.Name}}", "--memory", "1024"],
        ["modifyvm", "{{.Name}}", "--cpus", "4"]
      ],
      "boot_command": [
        "<esc><enter><wait>",
        "linux ",
        "netsetup=dhcp ",
        "lang=en_US ",
        "hostname={{.Name}} ",
        "autoyast=http://{{.HTTPIP}}:{{.HTTPPort}}/opensuse-13.1/autoinst.xml ",
        "textmode=1 ",
        "<wait><enter><wait>"
      ]
    }
  ],
  "post-processors": [
    {
      "output": "images/opensuse-13.1-0.0.1.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "type": "shell",
      "scripts": [
        "scripts/opensuse/13.1/update.sh",
        "scripts/opensuse/13.1/services.sh",
        "scripts/opensuse/13.1/vagrant.sh",

        "scripts/common/sshd.sh",
        "scripts/common/motd.sh",

        "scripts/opensuse/13.1/cleanup.sh",
        "scripts/common/zerodisk.sh"
      ]
    }
  ]
}