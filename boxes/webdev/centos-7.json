{
  "variables": {
    "version": "0.0.1",
    "os": "webdev-centos-7",
    "fusion_path": "/usr/local/Caskroom/vmware-fusion/7.1.0-2314774/VMware Fusion.app",

    "iso_url": "http://ftp.tu-chemnitz.de/pub/linux/centos/7.1406/isos/x86_64/CentOS-7.0-1406-x86_64-NetInstall.iso",
    "iso_checksum": "96de4f38a2f07da51831153549c8bd0c",
    "iso_checksum_type": "md5",

    "qemu_accelerator": "kvm"
  },
  "builders": [
    {
      "name": "virtualbox",
      "type": "virtualbox-iso",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "vm_name": "{{user `os`}}",
      "guest_os_type": "RedHat_64",
      "guest_additions_mode": "upload",
      "hard_drive_interface": "sata",
      
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "512"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ],

      "output_directory": "images/{{user `os`}}-virtualbox-{{user `version`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": true,
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "boot_command": [
        "<tab><wait> ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "text ",
        "ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos-7/vagrant.cfg<enter>"
      ]
    },
    {
      "name": "vmware",
      "type": "vmware-iso",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "guest_os_type": "centos-64",
      "fusion_app_path": "{{user `fusion_path`}}",
      "vm_name": "{{user `os`}}",
      "tools_upload_flavor": "linux",
      
      "vmx_data": {
        "memsize": "512",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      },

      "output_directory": "images/{{user `os`}}-vmware-{{user `version`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": true,
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "boot_command": [
        "<tab><wait> ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "text ",
        "ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos-7/vagrant.cfg<enter>"
      ]
    },
    {
      "name": "libvirt",
      "type": "qemu",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "accelerator": "{{user `qemu_accelerator`}}",
      "disk_interface": "virtio",
      "net_device": "virtio-net",
      "format": "qcow2",
      "vm_name": "baseboxes-{{user `os`}}",

      "output_directory": "images/{{user `os`}}-libvirt-{{user `version`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": true,
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "boot_command": [
        "<tab><wait> ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "text ",
        "ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos-7/vagrant.cfg<enter>"
      ]
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "images/{{user `os`}}-{{.Provider}}-{{user `version`}}.box",
      "type": "vagrant",
      "only": ["virtualbox", "vmware", "libvirt"]
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "type": "shell",
      "scripts": [
        "scripts/centos/7/base.sh",
        "scripts/centos/7/update.sh",
        "scripts/centos/7/vmtools.sh",
        "scripts/centos/7/chef.sh",
        "scripts/centos/7/vagrant.sh",
        "scripts/centos/7/motd.sh"
      ]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": ["chef/cookbooks"],
      "roles_path": "chef/roles",
      "data_bags_path": "chef/data_bags",
      "skip_install": true,

      "run_list": [
        "recipe[database]",
        "recipe[sshkey]",
        "recipe[yum]",
        "recipe[sudo]",
        "recipe[locales]",
        "recipe[timezone]",
        "recipe[hosts]",
        "recipe[build]",
        "recipe[network]",
        "recipe[readline]",
        "recipe[git]",
        "recipe[cronlist]",
        "recipe[homeshick]",
        "recipe[htop]",
        "recipe[imagemagick]",
        "recipe[java]",
        "recipe[screen]",
        "recipe[nano]",
        "recipe[vim]",
        "recipe[sqlite]",
        "recipe[php]",
        "recipe[ruby]",
        "recipe[ntp]",
        "recipe[openssh]",
        "recipe[elasticsearch]",
        "recipe[memcached]",
        "recipe[redis]",
        "recipe[mysql]",
        "recipe[nginx]",
        "recipe[webdev]"
      ],

      "json": {
        "nginx": {
          "user": "vagrant",
          "group": "vagrant",
          "apps": [],
          "confs": []
        },
        "php": {
          "default_app": {
            "dir": "/vagrant"
          }
        },
        "ruby": {
          "method": "source"
        }
      }
    },
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "type": "shell",
      "scripts": [
        "scripts/centos/7/cleanup.sh",
        "scripts/centos/7/zerodisk.sh"
      ]
    }
  ]
}
