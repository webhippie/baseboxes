{
  "variables": {
    "version": "0.0.1",
    "os": "webdev-debian-7",
    "fusion_path": "/usr/local/Caskroom/vmware-fusion/7.1.0-2314774/VMware Fusion.app",

    "iso_url": "http://cdimage.debian.org/mirror/cdimage/archive/7.7.0/amd64/iso-cd/debian-7.7.0-amd64-netinst.iso",
    "iso_checksum": "0b31bccccb048d20b551f70830bb7ad0",
    "iso_checksum_type": "md5",

    "qemu_accelerator": "kvm"
  },
  "builders": [
    {
      "name": "virtualbox",
      "type": "virtualbox-iso",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "vm_name": "{{user `os`}}",
      "guest_os_type": "Debian_64",
      "guest_additions_mode": "upload",
      "hard_drive_interface": "sata",
      
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "1024"],
        ["modifyvm", "{{.Name}}", "--cpus", "2"]
      ],

      "output_directory": "images/{{user `os`}}-virtualbox-{{user `version`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": true,
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S halt -p",
      "boot_command": [
        "<esc><wait>",
        "install ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/debian-7/vagrant.cfg ",
        "debian-installer=en_US ",
        "auto ",
        "locale=en_US ",
        "kbd-chooser/method=us ",
        "netcfg/get_hostname=vagrant ",
        "netcfg/get_domain=webhippie.de ",
        "fb=false ",
        "debconf/frontend=noninteractive ",
        "console-setup/ask_detect=false ",
        "console-keymaps-at/keymap=de ",
        "keyboard-configuration/xkb-keymap=de ",
        "<enter>"
      ]
    },
    {
      "name": "vmware",
      "type": "vmware-iso",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "guest_os_type": "debian7-64",
      "fusion_app_path": "{{user `fusion_path`}}",
      "vm_name": "{{user `os`}}",
      "tools_upload_flavor": "linux",
      
      "vmx_data": {
        "memsize": "1024",
        "numvcpus": "2",
        "cpuid.coresPerSocket": "1"
      },
      
      "output_directory": "images/{{user `os`}}-vmware-{{user `version`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": true,
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S halt -p",
      "boot_command": [
        "<esc><wait>",
        "install ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/debian-7/vagrant.cfg ",
        "debian-installer=en_US ",
        "auto ",
        "locale=en_US ",
        "kbd-chooser/method=us ",
        "netcfg/get_hostname=vagrant ",
        "netcfg/get_domain=webhippie.de ",
        "fb=false ",
        "debconf/frontend=noninteractive ",
        "console-setup/ask_detect=false ",
        "console-keymaps-at/keymap=de ",
        "keyboard-configuration/xkb-keymap=de ",
        "<enter>"
      ]
    },
    {
      "name": "libvirt",
      "type": "qemu",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "accelerator": "{{user `qemu_accelerator`}}",
      "disk_interface": "virtio",
      "net_device": "virtio-net",
      "format": "qcow2",
      "vm_name": "baseboxes-{{user `os`}}",

      "output_directory": "images/{{user `os`}}-libvirt-{{user `version`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": true,
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S halt -p",
      "boot_command": [
        "<esc><wait>",
        "install ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/debian-7/vagrant.cfg ",
        "debian-installer=en_US ",
        "auto ",
        "locale=en_US ",
        "kbd-chooser/method=us ",
        "netcfg/get_hostname=vagrant ",
        "netcfg/get_domain=webhippie.de ",
        "fb=false ",
        "debconf/frontend=noninteractive ",
        "console-setup/ask_detect=false ",
        "console-keymaps-at/keymap=de ",
        "keyboard-configuration/xkb-keymap=de ",
        "<enter>"
      ]
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "images/{{user `os`}}-{{.Provider}}-{{user `version`}}.box",
      "type": "vagrant",
      "only": ["virtualbox", "vmware", "libvirt"]
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "type": "shell",
      "scripts": [
        "scripts/debian/7/base.sh",
        "scripts/debian/7/update.sh",
        "scripts/debian/7/vmtools.sh",
        "scripts/debian/7/chef.sh",
        "scripts/debian/7/vagrant.sh",
        "scripts/debian/7/motd.sh"
      ]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": ["chef/cookbooks"],
      "roles_path": "chef/roles",
      "data_bags_path": "chef/data_bags",
      "skip_install": true,

      "run_list": [
        "recipe[database]",
        "recipe[sshkey]",
        "recipe[apt]",
        "recipe[sudo]",
        "recipe[locales]",
        "recipe[timezone]",
        "recipe[hosts]",
        "recipe[build]",
        "recipe[network]",
        "recipe[readline]",
        "recipe[git]",
        "recipe[cronlist]",
        "recipe[homeshick]",
        "recipe[htop]",
        "recipe[imagemagick]",
        "recipe[java]",
        "recipe[screen]",
        "recipe[nano]",
        "recipe[vim]",
        "recipe[sqlite]",
        "recipe[php]",
        "recipe[ruby]",
        "recipe[ntp]",
        "recipe[openssh]",
        "recipe[elasticsearch]",
        "recipe[memcached]",
        "recipe[redis]",
        "recipe[mysql]",
        "recipe[nginx]",
        "recipe[webdev]"
      ],

      "json": {
        "nginx": {
          "user": "vagrant",
          "group": "vagrant",
          "apps": [],
          "confs": []
        },
        "php": {
          "default_app": {
            "dir": "/vagrant"
          }
        },
        "ruby": {
          "method": "source"
        }
      }
    },
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "type": "shell",
      "scripts": [
        "scripts/debian/7/cleanup.sh",
        "scripts/debian/7/zerodisk.sh"
      ]
    }
  ]
}
