{
  "variables": {
    "version": "0.0.1",
    "os": "opensuse-13.2",
    "fusion_path": "/usr/local/Caskroom/vmware-fusion/7.1.0-2314774/VMware Fusion.app",

    "iso_url": "http://download.opensuse.org/distribution/13.2/iso/openSUSE-13.2-DVD-x86_64.iso",
    "iso_checksum": "350b8cb014a4e342cc9a7cc9df891b99",
    "iso_checksum_type": "md5"
  },
  "builders": [
    {
      "name": "virtualbox",
      "type": "virtualbox-iso",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "vm_name": "{{user `os`}}",
      "guest_os_type": "OpenSUSE_64",
      "guest_additions_mode": "upload",
      "hard_drive_interface": "sata",

      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "512"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ],
      
      "output_directory": "images/{{user `os`}}-virtualbox-{{user `version`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": true,
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -p",
      "boot_command": [
        "<esc><enter><wait>",
        "linux ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "netsetup=dhcp ",
        "lang=en_US.utf8 ",
        "textmode=1 ",
        "instmode=dvd ",
        "autoyast=http://{{.HTTPIP}}:{{.HTTPPort}}/opensuse-13.2/autoinst.xml ",
        "<enter><wait>"
      ]
    },
    {
      "name": "vmware",
      "type": "vmware-iso",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "guest_os_type": "opensuse-64",
      "fusion_app_path": "{{user `fusion_path`}}",
      "vm_name": "{{user `os`}}",
      "tools_upload_flavor": "linux",
      
      "vmx_data": {
        "memsize": "512",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      },
      
      "output_directory": "images/{{user `os`}}-vmware-{{user `version`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": true,
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -p",
      "boot_command": [
        "<esc><enter><wait>",
        "linux ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "netsetup=dhcp ",
        "lang=en_US.utf8 ",
        "textmode=1 ",
        "instmode=dvd ",
        "autoyast=http://{{.HTTPIP}}:{{.HTTPPort}}/opensuse-13.2/autoinst.xml ",
        "<enter><wait>"
      ]
    },
    {
      "name": "kvm",
      "type": "qemu",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "accelerator": "kvm",
      "disk_interface": "virtio",
      "net_device": "virtio-net",
      "format": "qcow2",
      "vm_name": "baseboxes-{{user `os`}}",

      "output_directory": "images/{{user `os`}}-libvirt-{{user `version`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": true,
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -p",
      "boot_command": [
        "<esc><enter><wait>",
        "linux ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "netsetup=dhcp ",
        "lang=en_US.utf8 ",
        "textmode=1 ",
        "instmode=dvd ",
        "autoyast=http://{{.HTTPIP}}:{{.HTTPPort}}/opensuse-13.2/autoinst.xml ",
        "<enter><wait>"
      ]
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "images/{{user `os`}}-{{.Provider}}-{{user `version`}}.box",
      "type": "vagrant",
      "only": ["virtualbox", "vmware"]
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "type": "shell",
      "scripts": [
        "scripts/opensuse/13.2/wait.sh",
        "scripts/opensuse/13.2/base.sh",
        "scripts/opensuse/13.2/update.sh",
        "scripts/common/vmtools.sh",
        "scripts/opensuse/13.2/sshd.sh",
        "scripts/common/chef.sh",
        "scripts/common/vagrant.sh",
        "scripts/common/motd.sh",
        "scripts/opensuse/13.2/cleanup.sh",
        "scripts/common/zerodisk.sh"
      ]
    }
  ]
}
