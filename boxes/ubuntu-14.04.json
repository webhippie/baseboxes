{
  "variables": {
    "version": "0.0.1",
    "fusion_path": "/usr/local/Caskroom/vmware-fusion/6.0.4-1887983/VMware Fusion.app"
  },
  "builders": [
    {
      "type": "virtualbox-iso",

      "vm_name": "ubuntu-14.04",
      "guest_os_type": "Ubuntu_64",

      "iso_url": "http://releases.ubuntu.com/trusty/ubuntu-14.04.1-server-amd64.iso",
      "iso_checksum": "ca2531b8cd79ea5b778ede3a524779b9",
      "iso_checksum_type": "md5",
      
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "disk_size": 20480,
      "guest_additions_mode": "upload",
      "hard_drive_interface": "sata",
      "ssh_port": 22,
      "headless": false,
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "1024"],
        ["modifyvm", "{{.Name}}", "--cpus", "4"]
      ],
      "boot_command": [
        "<Esc><Esc><Enter> ",
        "/install/vmlinuz ",
        "noapic ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/ubuntu-14.04/preseed.cfg ",
        "debian-installer=en_US ",
        "auto ",
        "locale=en_US ",
        "kbd-chooser/method=de ",
        "hostname=vagrant ",
        "fb=false ",
        "debconf/frontend=noninteractive ",
        "keyboard-configuration/modelcode=pc105 ",
        "keyboard-configuration/layout=Germany ",
        "keyboard-configuration/variant=Germany ",
        "console-setup/ask_detect=false ",
        "initrd=/install/initrd.gz -- <Enter>"
      ]
    },
    {
      "type": "vmware-iso",

      "iso_url": "http://releases.ubuntu.com/trusty/ubuntu-14.04.1-server-amd64.iso",
      "iso_checksum": "ca2531b8cd79ea5b778ede3a524779b9",
      "iso_checksum_type": "md5",
      
      "fusion_app_path": "{{user `fusion_path`}}",
      
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "disk_size": 20480,
      "tools_upload_flavor": "linux",
      "ssh_port": 22,
      "headless": false,
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "boot_command": [
        "<Tab> text ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos-6.5/ks.cfg<Enter>"
      ]
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "images/{{.BuildName}}-{{.Provider}}-{{user `version`}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "type": "shell",
      "scripts": [
        "scripts/ubuntu/14.04/base.sh",
        "scripts/ubuntu/14.04/updates.sh",
        "scripts/ubuntu/14.04/sshd.sh",
        "scripts/ubuntu/14.04/ruby.sh",
        "scripts/common/chef.sh",
        "scripts/common/vagrant.sh",
        "scripts/common/motd.sh",
        "scripts/common/virtualbox.sh",
        "scripts/ubuntu/14.04/cleanup.sh",
        "scripts/common/zerodisk.sh"
      ]
    }
  ]
}
