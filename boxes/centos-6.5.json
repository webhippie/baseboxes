{
  "variables": {
    "version": "0.1.0",
    "os": "centos-6.5",
    "fusion_path": "/usr/local/Caskroom/vmware-fusion/6.0.4-1887983/VMware Fusion.app",

    "iso_url": "http://ftp.tu-chemnitz.de/pub/linux/centos/6.5/isos/x86_64/CentOS-6.5-x86_64-netinstall.iso",
    "iso_checksum": "939fd1d87c11ffe7795324438b85adfb",
    "iso_checksum_type": "md5"
  },
  "builders": [
    {
      "name": "virtualbox",
      "type": "virtualbox-iso",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "vm_name": "{{user `os`}}",
      "guest_os_type": "RedHat_64",
      "guest_additions_mode": "upload",
      "hard_drive_interface": "sata",
      
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "512"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ],
      
      "output_directory": "images/{{user `os`}}-virtualbox-{{user `version`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": true,
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "boot_command": [
        "<tab><wait> ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "text ",
        "ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos-6.5/ks.cfg<enter>"
      ]
    },
    {
      "name": "vmware",
      "type": "vmware-iso",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "guest_os_type": "centos-64",
      "fusion_app_path": "{{user `fusion_path`}}",
      "vm_name": "{{user `os`}}",
      "tools_upload_flavor": "linux",

      "vmx_data": {
        "memsize": "512",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      },

      "output_directory": "images/{{user `os`}}-vmware-{{user `version`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": true,
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "boot_command": [
        "<tab><wait> ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "text ",
        "ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos-6.5/ks.cfg<enter>"
      ]
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "images/{{user `os`}}-{{.Provider}}-{{user `version`}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "type": "shell",
      "scripts": [
        "scripts/centos/6.5/base.sh",
        "scripts/centos/6.5/update.sh",
        "scripts/common/vmtools.sh",
        "scripts/centos/6.5/sshd.sh",
        "scripts/common/chef.sh",
        "scripts/common/vagrant.sh",
        "scripts/common/motd.sh",
        "scripts/centos/6.5/cleanup.sh",
        "scripts/common/zerodisk.sh"
      ]
    }
  ]
}
