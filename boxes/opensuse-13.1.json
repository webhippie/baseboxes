{
  "variables": {
    "version": "0.0.1",
    "fusion_path": "/usr/local/Caskroom/vmware-fusion/6.0.4-1887983/VMware Fusion.app"
  },
  "builders": [
    {
      "type": "virtualbox-iso",

      "vm_name": "opensuse-13.1",
      "guest_os_type": "OpenSUSE_64",

      "iso_url": "http://download.opensuse.org/distribution/13.1/iso/openSUSE-13.1-NET-x86_64.iso",
      "iso_checksum": "6c0d656895cbd92f34de61d98ca364ea",
      "iso_checksum_type": "md5",
      
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "disk_size": 20480,
      "guest_additions_mode": "upload",
      "hard_drive_interface": "sata",
      "ssh_port": 22,
      "headless": false,
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "1024"],
        ["modifyvm", "{{.Name}}", "--cpus", "4"]
      ],
      "boot_command": [
        "<esc><enter><wait>",
        "linux ",
        "netsetup=dhcp ",
        "lang=en_US ",
        "hostname={{.Name}} ",
        "textmode=1 ",
        "autoyast=http://{{.HTTPIP}}:{{.HTTPPort}}/opensuse-13.1/autoinst.xml ",
        "<wait><enter><wait>"
      ]
    },
    {
      "type": "vmware-iso",

      "iso_url": "http://download.opensuse.org/distribution/13.1/iso/openSUSE-13.1-NET-x86_64.iso",
      "iso_checksum": "6c0d656895cbd92f34de61d98ca364ea",
      "iso_checksum_type": "md5",
      
      "fusion_app_path": "{{user `fusion_path`}}",
      
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "disk_size": 20480,
      "tools_upload_flavor": "linux",
      "ssh_port": 22,
      "headless": false,
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "boot_command": [
        "<Tab> text ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos-6.5/ks.cfg<Enter>"
      ]
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "images/{{.BuildName}}-{{.Provider}}-{{user `version`}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "type": "shell",
      "scripts": [
        "scripts/opensuse/13.1/update.sh",
        "scripts/opensuse/13.1/services.sh",
        "scripts/opensuse/13.1/vagrant.sh",
        "scripts/opensuse/13.1/sshd.sh",
        "scripts/opensuse/13.1/motd.sh",
        "scripts/opensuse/13.1/cleanup.sh",
        "scripts/opensuse/13.1/zerodisk.sh"
      ]
    }
  ]
}
