{
  "variables": {
    "version": "0.0.1",
    "os": "server-centos-6.5",

    "iso_url": "http://ftp.tu-chemnitz.de/pub/linux/centos/6.5/isos/x86_64/CentOS-6.5-x86_64-netinstall.iso",
    "iso_checksum": "939fd1d87c11ffe7795324438b85adfb",
    "iso_checksum_type": "md5",

    "qemu_accelerator": "kvm"
  },
  "builders": [
    {
      "name": "qemu",
      "type": "qemu",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "accelerator": "{{user `qemu_accelerator`}}",
      "disk_interface": "virtio",
      "net_device": "virtio-net",
      "format": "qcow2",
      "vm_name": "{{user `os`}}-{{user `version`}}",

      "output_directory": "images/{{user `os`}}-{{user `version`}}",
      "ssh_username": "deploy",
      "ssh_password": "p455w0rd!234",
      "ssh_wait_timeout": "90m",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": true,
      "http_directory": "http",
      "shutdown_command": "echo 'p455w0rd!234' | sudo -S shutdown -P now",
      "boot_command": [
        "<tab><wait> ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "text ",
        "ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos-6.5/server.cfg<enter>"
      ]
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'p455w0rd!234' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "type": "shell",
      "scripts": [
        "scripts/centos/6.5/base.sh",
        "scripts/centos/6.5/update.sh",
        "scripts/centos/6.5/sshd.sh",
        "scripts/centos/6.5/services.sh",
        "scripts/centos/6.5/chefdk.sh",
        "scripts/centos/6.5/motd.sh",
        "scripts/centos/6.5/cleanup.sh"
      ]
    }
  ]
}
