{
  "variables": {
    "version": "1.0.0",
    "os": "alpine-3.3",

    "iso_url": "http://dl-4.alpinelinux.org/alpine/v3.3/releases/x86_64/alpine-3.3.3-x86_64.iso",
    "iso_checksum": "af766ac6221c6f5b471ca388be22df81ac6f21be37486ba6846f115d1798528a",
    "iso_checksum_type": "sha256",

    "qemu_accelerator": "kvm",

    "memory": "1024",
    "cpus": "2",

    "fusion_path": "/Applications/VMware Fusion.app"
  },
  "builders": [
    {
      "name": "virtualbox",
      "type": "virtualbox-iso",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "vm_name": "{{user `os`}}",
      "guest_os_type": "Linux_64",
      "guest_additions_mode": "upload",
      "hard_drive_interface": "sata",

      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
      ],

      "output_directory": "images/{{user `os`}}-virtualbox-{{user `version`}}",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "1000s",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": false,
      "http_directory": "http",
      "shutdown_command": "/sbin/poweroff",
      "boot_command": [
        "<wait10><wait10>root<enter><wait>",
        "ifconfig eth0 10.0.2.15 netmask 255.255.255.0<enter><wait>",
        "wget http://{{.HTTPIP}}:{{.HTTPPort}}/alpine-3.3/vagrant<enter><wait>",
        "setup-alpine -f vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "1<enter><wait10><wait10>",
        "z<enter><wait10>",
        "<wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10>",
        "reboot<enter>"
      ]
    },
    {
      "name": "vmware",
      "type": "vmware-iso",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "vm_name": "{{user `os`}}",
      "guest_os_type": "alpine-64",
      "tools_upload_flavor": "",
      "fusion_app_path": "{{user `fusion_path`}}",

      "vmx_data": {
        "memsize": "{{user `memory`}}",
        "numvcpus": "{{user `cpus`}}"
      },

      "output_directory": "images/{{user `os`}}-vmware-{{user `version`}}",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": true,
      "http_directory": "http",
      "shutdown_command": "/sbin/poweroff",
      "boot_command": [
        "<wait10><wait10>root<enter><wait>",
        "ifconfig eth0 10.0.2.15 netmask 255.255.255.0<enter><wait>",
        "wget http://{{.HTTPIP}}:{{.HTTPPort}}/alpine-3.3/vagrant<enter><wait>",
        "setup-alpine -f vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "1<enter><wait10><wait10>",
        "z<enter><wait10>",
        "<wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10>",
        "reboot<enter>"
      ]
    },
    {
      "name": "libvirt",
      "type": "qemu",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "accelerator": "{{user `qemu_accelerator`}}",
      "disk_interface": "virtio",
      "net_device": "virtio-net",
      "format": "qcow2",
      "vm_name": "{{user `os`}}-{{user `version`}}",

      "output_directory": "images/{{user `os`}}-libvirt-{{user `version`}}",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "1000s",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": false,
      "http_directory": "http",
      "shutdown_command": "/sbin/poweroff",
      "boot_command": [
        "<wait10><wait10>root<enter><wait>",
        "ifconfig eth0 10.0.2.15 netmask 255.255.255.0<enter><wait>",
        "wget http://{{.HTTPIP}}:{{.HTTPPort}}/alpine-3.3/vagrant<enter><wait>",
        "setup-alpine -f vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "1<enter><wait10><wait10>",
        "z<enter><wait10>",
        "<wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10>",
        "reboot<enter>"
      ]
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "images/{{user `os`}}-{{.Provider}}-{{user `version`}}.box",
      "type": "vagrant",
      "only": ["virtualbox", "vmware", "libvirt"]
    }
  ],
  "provisioners": [
    {
      "execute_command": "/bin/sh '{{.Path}}'",
      "type": "shell",
      "scripts": [
        "scripts/alpine/3.3/base.sh",
        "scripts/alpine/3.3/update.sh",
        "scripts/alpine/3.3/vmtools.sh",
        "scripts/alpine/3.3/sshd.sh",
        "scripts/alpine/3.3/bindfs.sh",
        "scripts/alpine/3.3/vagrant.sh",
        "scripts/alpine/3.3/motd.sh",
        "scripts/alpine/3.3/cleanup.sh",
        "scripts/alpine/3.3/zerodisk.sh"
      ]
    }
  ]
}
