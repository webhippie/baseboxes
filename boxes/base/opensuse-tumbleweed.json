{
  "variables": {
    "version": "1.0.0",
    "os": "opensuse-tumbleweed",

    "iso_url": "http://download.opensuse.org/tumbleweed/iso/openSUSE-Tumbleweed-NET-x86_64-Snapshot20160329-Media.iso",
    "iso_checksum": "802226e67f45d65ad0040d87a785b608011677d40f5109b158b63f8875a78c11",
    "iso_checksum_type": "sha256",

    "qemu_accelerator": "kvm",

    "memory": "1024",
    "cpus": "2",

    "fusion_path": "/Applications/VMware Fusion.app"
  },
  "builders": [
    {
      "name": "virtualbox",
      "type": "virtualbox-iso",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "vm_name": "{{user `os`}}",
      "guest_os_type": "OpenSUSE_64",
      "guest_additions_mode": "disable",
      "hard_drive_interface": "sata",

      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
      ],

      "output_directory": "images/{{user `os`}}-virtualbox-{{user `version`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "1000s",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": false,
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -p",
      "boot_command": [
        "<esc><enter><wait>",
        "linux ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "netdevice=eth0 ",
        "netsetup=dhcp ",
        "lang=en_US.utf8 ",
        "textmode=1 ",
        "autoyast=http://{{.HTTPIP}}:{{.HTTPPort}}/opensuse-tumbleweed/vagrant.xml ",
        "<enter><wait>"
      ]
    },
    {
      "name": "vmware",
      "type": "vmware-iso",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "vm_name": "{{user `os`}}",
      "guest_os_type": "opensuse-64",
      "tools_upload_flavor": "",
      "fusion_app_path": "{{user `fusion_path`}}",

      "vmx_data": {
        "memsize": "{{user `memory`}}",
        "numvcpus": "{{user `cpus`}}"
      },

      "output_directory": "images/{{user `os`}}-vmware-{{user `version`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "60m",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": false,
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -p",
      "boot_command": [
        "<esc><enter><wait>",
        "linux ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "netdevice=eth0 ",
        "netsetup=dhcp ",
        "lang=en_US.utf8 ",
        "textmode=1 ",
        "autoyast=http://{{.HTTPIP}}:{{.HTTPPort}}/opensuse-tumbleweed/vagrant.xml ",
        "<enter><wait>"
      ]
    },
    {
      "name": "libvirt",
      "type": "qemu",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "accelerator": "{{user `qemu_accelerator`}}",
      "disk_interface": "virtio",
      "net_device": "virtio-net",
      "format": "qcow2",
      "vm_name": "{{user `os`}}-{{user `version`}}",

      "output_directory": "images/{{user `os`}}-libvirt-{{user `version`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "1000s",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": false,
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -p",
      "boot_command": [
        "<esc><enter><wait>",
        "linux ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "netdevice=eth0 ",
        "netsetup=dhcp ",
        "lang=en_US.utf8 ",
        "textmode=1 ",
        "autoyast=http://{{.HTTPIP}}:{{.HTTPPort}}/opensuse-tumbleweed/vagrant-libvirt.xml ",
        "<enter><wait>"
      ]
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "images/{{user `os`}}-{{.Provider}}-{{user `version`}}.box",
      "type": "vagrant",
      "only": ["virtualbox", "vmware", "libvirt"]
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "type": "shell",
      "scripts": [
        "scripts/opensuse/tumbleweed/wait.sh",
        "scripts/opensuse/tumbleweed/base.sh",
        "scripts/opensuse/tumbleweed/update.sh",
        "scripts/opensuse/tumbleweed/vmtools.sh",
        "scripts/opensuse/tumbleweed/sshd.sh",
        "scripts/opensuse/tumbleweed/chef.sh",
        "scripts/opensuse/tumbleweed/bindfs.sh",
        "scripts/opensuse/tumbleweed/vagrant.sh",
        "scripts/opensuse/tumbleweed/motd.sh",
        "scripts/opensuse/tumbleweed/cleanup.sh",
        "scripts/opensuse/tumbleweed/zerodisk.sh"
      ]
    }
  ]
}
