{
  "variables": {
    "version": "1.0.0",
    "os": "alpine-3.1",
    "fusion_path": "/usr/local/Caskroom/vmware-fusion/7.1.0-2314774/VMware Fusion.app",

    "iso_url": "http://wiki.alpinelinux.org/cgi-bin/dl.cgi/v3.1/releases/x86_64/alpine-mini-3.1.2-x86_64.iso",
    "iso_checksum": "dac8510104a1b34cc5e2a0739e9426ad",
    "iso_checksum_type": "md5",

    "qemu_accelerator": "kvm"
  },
  "builders": [
    {
      "name": "virtualbox",
      "type": "virtualbox-iso",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "vm_name": "{{user `os`}}",
      "guest_os_type": "Linux26_64",
      "guest_additions_mode": "upload",
      "hard_drive_interface": "sata",

      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "512"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ],

      "output_directory": "images/{{user `os`}}-virtualbox-{{user `version`}}",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": false,
      "http_directory": "http",
      "shutdown_command": "/sbin/poweroff",
      "boot_command": [
        "<wait10><wait10>root<enter><wait>",
        "ifconfig eth0 10.0.2.15 netmask 255.255.255.0<enter><wait>",
        "wget http://{{.HTTPIP}}:{{.HTTPPort}}/alpine-3.1/vagrant<enter><wait>",
        "setup-alpine -f vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "1<enter><wait10><wait10>",
        "z<enter><wait10>",
        "<wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10>",
        "reboot<enter>"
      ]
    },
    {
      "name": "vmware",
      "type": "vmware-iso",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "guest_os_type": "alpine-64",
      "fusion_app_path": "{{user `fusion_path`}}",
      "vm_name": "{{user `os`}}",
      "tools_upload_flavor": "linux",

      "vmx_data": {
        "memsize": "512",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      },

      "output_directory": "images/{{user `os`}}-vmware-{{user `version`}}",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": true,
      "http_directory": "http",
      "shutdown_command": "/sbin/poweroff",
      "boot_command": [
        "<wait10><wait10>root<enter><wait>",
        "ifconfig eth0 10.0.2.15 netmask 255.255.255.0<enter><wait>",
        "wget http://{{.HTTPIP}}:{{.HTTPPort}}/alpine-3.1/vagrant<enter><wait>",
        "setup-alpine -f vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "1<enter><wait10><wait10>",
        "z<enter><wait10>",
        "<wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10>",
        "reboot<enter>"
      ]
    },
    {
      "name": "libvirt",
      "type": "qemu",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "accelerator": "{{user `qemu_accelerator`}}",
      "disk_interface": "virtio",
      "net_device": "virtio-net",
      "format": "qcow2",
      "vm_name": "baseboxes-{{user `os`}}",

      "output_directory": "images/{{user `os`}}-libvirt-{{user `version`}}",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": true,
      "http_directory": "http",
      "shutdown_command": "/sbin/poweroff",
      "boot_command": [
        "<wait10><wait10>root<enter><wait>",
        "ifconfig eth0 10.0.2.15 netmask 255.255.255.0<enter><wait>",
        "wget http://{{.HTTPIP}}:{{.HTTPPort}}/alpine-3.1/vagrant-libvirt<enter><wait>",
        "setup-alpine -f vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "1<enter><wait10><wait10>",
        "z<enter><wait10>",
        "<wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10>",
        "reboot<enter>"
      ]
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "images/{{user `os`}}-{{.Provider}}-{{user `version`}}.box",
      "type": "vagrant",
      "only": ["virtualbox", "vmware", "libvirt"]
    }
  ],
  "provisioners": [
    {
      "execute_command": "/bin/sh '{{.Path}}'",
      "type": "shell",
      "scripts": [
        "scripts/alpine/3.1/base.sh",
        "scripts/alpine/3.1/update.sh",
        "scripts/alpine/3.1/vmtools.sh",
        "scripts/alpine/3.1/sshd.sh",
        "scripts/alpine/3.1/bindfs.sh",
        "scripts/alpine/3.1/vagrant.sh",
        "scripts/alpine/3.1/motd.sh",
        "scripts/alpine/3.1/cleanup.sh",
        "scripts/alpine/3.1/zerodisk.sh"
      ]
    }
  ]
}
