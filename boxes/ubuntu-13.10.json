{
  "variables": {
    "version": "0.0.1",
    "os": "ubuntu-13.10",
    "fusion_path": "/usr/local/Caskroom/vmware-fusion/6.0.4-1887983/VMware Fusion.app"
  },
  "builders": [
    {
      "name": "virtualbox",
      "type": "virtualbox-iso",

      "vm_name": "ubuntu-13.10",
      "guest_os_type": "Ubuntu_64",

      "iso_url": "http://releases.ubuntu.com/saucy/ubuntu-13.10-server-amd64.iso",
      "iso_checksum": "4d1a8b720cdd14b76ed9410c63a00d0e",
      "iso_checksum_type": "md5",
      
      "output_directory": "images/{{user `os`}}-virtualbox-{{user `version`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "disk_size": 20480,
      "guest_additions_mode": "upload",
      "hard_drive_interface": "sata",
      "ssh_port": 22,
      "headless": false,
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "512"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ],
      "boot_command": [
        "<esc><esc><enter><wait> ",
        "/install/vmlinuz ",
        "noapic ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/ubuntu-13.10/preseed.cfg ",
        "debian-installer=en_US ",
        "auto ",
        "locale=en_US ",
        "kbd-chooser/method=de ",
        "hostname=vagrant ",
        "fb=false ",
        "debconf/frontend=noninteractive ",
        "keyboard-configuration/modelcode=pc105 ",
        "keyboard-configuration/layout=Germany ",
        "keyboard-configuration/variant=Germany ",
        "console-setup/ask_detect=false ",
        "initrd=/install/initrd.gz -- <enter>"
      ]
    },
    {
      "name": "vmware",
      "type": "vmware-iso",

      "iso_url": "http://releases.ubuntu.com/saucy/ubuntu-13.10-server-amd64.iso",
      "iso_checksum": "4d1a8b720cdd14b76ed9410c63a00d0e",
      "iso_checksum_type": "md5",
      "guest_os_type": "ubuntu-64",
      
      "fusion_app_path": "{{user `fusion_path`}}",
      "vm_name": "{{user `os`}}",
      
      "output_directory": "images/{{user `os`}}-vmware-{{user `version`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "disk_size": 20480,
      "tools_upload_flavor": "linux",
      "ssh_port": 22,
      "headless": false,
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "vmx_data": {
        "memsize": "512",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      },
      "boot_command": [
        "<esc><esc><enter><wait> ",
        "/install/vmlinuz ",
        "noapic ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/ubuntu-13.10/preseed.cfg ",
        "debian-installer=en_US ",
        "auto ",
        "locale=en_US ",
        "kbd-chooser/method=de ",
        "hostname=vagrant ",
        "fb=false ",
        "debconf/frontend=noninteractive ",
        "keyboard-configuration/modelcode=pc105 ",
        "keyboard-configuration/layout=Germany ",
        "keyboard-configuration/variant=Germany ",
        "console-setup/ask_detect=false ",
        "initrd=/install/initrd.gz -- <enter>"
      ]
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "images/{{user `os`}}-{{.Provider}}-{{user `version`}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "type": "shell",
      "scripts": [
        "scripts/ubuntu/13.10/base.sh",
        "scripts/ubuntu/13.10/update.sh",
        "scripts/common/vmtools.sh",
        "scripts/ubuntu/13.10/sshd.sh",
        "scripts/common/chef.sh",
        "scripts/common/vagrant.sh",
        "scripts/common/motd.sh",
        "scripts/ubuntu/13.10/cleanup.sh",
        "scripts/common/zerodisk.sh"
      ]
    }
  ]
}
