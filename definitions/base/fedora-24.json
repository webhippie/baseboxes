{
  "variables": {
    "version": "1.0.0",
    "os": "fedora-24",

    "iso_url": "http://ftp.halifax.rwth-aachen.de/fedora/linux/releases/24/Server/x86_64/iso/Fedora-Server-netinst-x86_64-24.iso",
    "iso_checksum": "071c30520775b3e93bb4c34edab4eab3badc26fbb8473ad3a9458614ba85a4e5",
    "iso_checksum_type": "sha256",

    "qemu_accelerator": "kvm",

    "memory": "1024",
    "cpus": "2",

    "fusion_path": "/Applications/VMware Fusion.app"
  },
  "builders": [
    {
      "name": "virtualbox",
      "type": "virtualbox-iso",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "vm_name": "{{user `os`}}",
      "guest_os_type": "Fedora_64",
      "guest_additions_mode": "upload",
      "hard_drive_interface": "sata",

      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
      ],

      "output_directory": "images/{{user `os`}}-virtualbox-{{user `version`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "1000s",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": false,
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "boot_command": [
        "<esc><wait>",
        "linux ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "inst.nodnf=1 ",
        "inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/fedora-24/vagrant.cfg<enter>"
      ]
    },
    {
      "name": "vmware",
      "type": "vmware-iso",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "vm_name": "{{user `os`}}",
      "guest_os_type": "fedora-64",
      "tools_upload_flavor": "linux",
      "fusion_app_path": "{{user `fusion_path`}}",

      "vmx_data": {
        "memsize": "{{user `memory`}}",
        "numvcpus": "{{user `cpus`}}"
      },

      "output_directory": "images/{{user `os`}}-vmware-{{user `version`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "60m",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": false,
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "boot_command": [
        "<esc><wait>",
        "linux ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "inst.nodnf=1 ",
        "inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/fedora-24/vagrant.cfg<enter>"
      ]
    },
    {
      "name": "libvirt",
      "type": "qemu",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "accelerator": "{{user `qemu_accelerator`}}",
      "disk_interface": "virtio",
      "net_device": "virtio-net",
      "format": "qcow2",
      "vm_name": "{{user `os`}}-{{user `version`}}",

      "output_directory": "images/{{user `os`}}-libvirt-{{user `version`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "1000s",
      "disk_size": 20480,
      "ssh_port": 22,
      "headless": false,
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "boot_command": [
        "<esc><wait>",
        "linux ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "inst.nodnf=1 ",
        "inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/fedora-24/vagrant.cfg<enter>"
      ]
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "images/{{user `os`}}-{{.Provider}}-{{user `version`}}.box",
      "type": "vagrant",
      "only": ["virtualbox", "vmware", "libvirt"]
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "type": "shell",
      "scripts": [
        "scripts/fedora/24/base.sh",
        "scripts/fedora/24/update.sh",
        "scripts/fedora/24/vmtools.sh",
        "scripts/fedora/24/9p.sh",
        "scripts/fedora/24/sshd.sh",
        "scripts/fedora/24/chef.sh",
        "scripts/fedora/24/bindfs.sh",
        "scripts/fedora/24/vagrant.sh",
        "scripts/fedora/24/motd.sh",
        "scripts/fedora/24/cleanup.sh",
        "scripts/fedora/24/zerodisk.sh"
      ]
    }
  ]
}
